/*
盒式布局
*/


.list-con{
    width: 750rpx;
    height: 190rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: center;
    justify-content: flex-start;
    background-color: white;
    margin-bottom: 2rpx;
}
.img-con{
    justify-self:flex-start;
    align-self: center;
    margin-left: 50rpx;
    /*margin-top: 24rpx; */
    border-radius: 10rpx;
}
.text-con{
    margin-left: 28rpx;
    height: 190rpx;
    display: flex;
    flex-wrap : nowrap;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
}
.top-text{
    margin-top: 15rpx;
    margin-bottom: 15rpx;
    font-size: 30rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    width: 480rpx;
    height: 40rpx;
    color: #404040;
}
.bottom-text{
    width: 100%;
    display: flex;
    flex-wrap : nowrap;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-top: 10rpx;
    font-size: 30rpx;
    color:#808080;
}
.detail-left{
    width: 220rpx;
    height: 20rpx;
    line-height: 20rpx;
    text-align: center;
    font-size: 25rpx;
    background-color: #e6e6e6;
    border-radius:40rpx;
    padding: 10rpx 10rpx;
    margin-top: 10rpx;
}
.detail-con{
    display: flex;
    width:100%;
    flex-wrap : nowrap;
    flex-direction: row;
    align-items: flex-end;
    justify-content: space-between;
    margin-top: 15rpx;
    margin-bottom: 10rpx;
}
.detail-right{
    margin-left: 70rpx;
    display: flex;
    flex-wrap : nowrap;
    flex-direction: column;
    align-items: flex-end;
    justify-content: flex-start;
    color: #808080;
}
.type-wrapper{
    font-size: 25rpx;
    background: #e5e5e5;
    color: #707070;
    padding: 5rpx 30rpx;
    border-radius: 5rpx;
    margin-bottom: 10rpx;
}
.footer{
    height: 80rpx;
    background: #fff;
}