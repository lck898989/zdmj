<view class='mingxiView'>
    <view class='mingxiTop'>
        <text class='leijiText' style='font-size:26rpx;'>累积提现</text>
        <image class='jinbiImage' src='../../resources/message_bar.png' mode='widthFix'></image>
        <!-- <image class='jinbiImage' style='width:26rpx;' src='../../main_personal_up.png' mode='widthFix'></image> -->
        <text class='money' style='font-size:37rpx;'>+6.00</text>
    </view>
    <view class='quanbu'>
        <text class='quanbutext' style='font-size:26rpx;'>全部</text>
    </view>
    <view class='typeView' hidden='{{hasMsg}}'>
        <view class='typeSon' style='font-size:29rpx;' wx:for='{{arrayType}}'>{{item}}</view>
    </view>
    <scroll-view class='msgView' scroll-y='true' hidden='{{hasMsg}}'>
        <view class='msgSon' wx:for='{{arrayTixian}}' bindtap='pressTixian' data-money="{{item.rebate}}" data-success="{{item.success}}" data-time="{{item.time}}" data-number="{{item.inumber}}" >
            <image class='successImage' mode='widthFix' src='../../resources/icon_receive.png' wx:if='{{item.success==1}}'></image>
            <image class='successImage' mode='widthFix' src='../../resources/message_bar.png' wx:else></image>
            <text class='time' space='ensp'>{{item.time}}</text>
            <text class='typeGetMoney' style='font-size:27rpx;' wx:if='{{item.type==1}}'><block wx:if='{{item.success==1}}'>提现成功</block><block wx:else>提现失败</block></text>
            <text class='typeGetMoney' style='font-size:27rpx;' wx:elif='{{item.type==2}}'><block wx:if='{{item.success==1}}'>文章收益成功</block><block wx:else>文章收益失败</block></text>
            <text class='typeGetMoney' style='font-size:27rpx;' wx:elif='{{item.type==3}}'><block wx:if='{{item.success==1}}'>分享收益成功</block><block wx:else>分享收益失败</block></text>
            <text class='typeGetMoney' style='font-size:27rpx;' wx:elif='{{item.type==4}}'><block wx:if='{{item.success==1}}'>好友分享成功</block><block wx:else>好友分享失败</block></text>
            <text class='typeGetMoney' style='font-size:27rpx;' wx:else='{{item.type==5}}'><block wx:if='{{item.success==1}}'>好友文章成功</block><block wx:else>好友文章失败</block></text>
            <text class='jine' style='font-size:27rpx;'>+{{item.rebate}}</text>
        </view>
    </scroll-view>
    <image class='tixianImage' hidden='{{nullMsg}}' mode='widthFix' src='../../resources/message_bar.png'></image>
    <text class='a' hidden='{{nullMsg}}' style='font-size:25rpx;'>亲，您还没有过提现记录</text>
    <text class='a1'hidden='{{nullMsg}}'style='font-size:25rpx;'>别急去赚钱吧</text>
</view>