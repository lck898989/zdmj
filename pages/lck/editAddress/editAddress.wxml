<!--pages/lck/editAddress/editAddress.wxml-->
<view class="page-con">
    <view class="index-manager">
        管理收货地址
    </view>
    <view class="editor-con">
        <view class='editor-item'>
            <input type="text" placeholder="{{currentAdd.recipient}}" bindinput='getEditUser' bindblur='updateAdd'/>
        </view>
        <view class='editor-item'>
            <view>
                <input type="text" placeholder="{{currentAdd.phone}}" bindinput='getEditPhone' bindblur='updateAdd' bindfocus='checkName'/>
            </view>
            <view id='phone_type'>
                +86 >
            </view>
        </view>
        <view class='editor-item'>
            <view>
                <!-- <view>{{currentAdd.district}}</view> -->
                <block wx:if='{{isShowDefault}}'>
                    <input type="text" placeholder="{{currentAdd.district}}" bindfocus='open' value='{{currentAdd.district}}' style='width:600rpx;' bindconfirm='commit'/>
                </block>
                <block wx:else>
                    <input type="text" placeholder="{{currentAdd.district}}" bindfocus='open' value='{{province}}{{city}}{{county}}' style='width:600rpx;' bindconfirm='commit'/>
                </block>
                <!-- <input type="text" placeholder="{{currentAdd.district}}" bindfocus='open' value='{{isShowDefault ? currentAdd.district : province city county}}' style='width:600rpx;' bindconfirm='commit'/> -->
            </view>
            <view id='phone_type'>
                >
            </view>
        </view>
        <view class='editor-item'>
            <input type="text" placeholder="{{currentAdd.detaildistrict}}" bindfocus='closeCityList' bindinput='getEditAddressDetail' bindblur='updataAdd' bindconfirm='over' style='width:700rpx'/>
        </view>
        <view class="save-container">
            <view class="save-btn" bindtap='saveEditAdd'>
                保存
            </view>
        </view>
    </view>
    <view wx:if="{{condition}}" class="citypicker">
        <view class="cityheader">
                <view bindtap="open" class="city-cancel but">取消</view>
                <view bindtap="commit" class="city-true but">确定</view>
        </view>
        <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{value}}" bindchange="bindChange" class="citybody">
            <picker-view-column>
                <view wx:for="{{provinces}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
            </picker-view-column>
            <picker-view-column>
                <view wx:for="{{citys}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
            </picker-view-column>
            <picker-view-column>
                <view wx:for="{{countys}}" wx:key="item" style="line-height: 50px;padding-left:10px;">{{item}}</view>
            </picker-view-column>
        </picker-view>
    </view>    
</view>
