/* pages/lck/order/order.wxss */
page{
    background-color: #f2f2f2;
}
.page-con{
    position: relative;
    margin-bottom: 150rpx;
}
.address-con,.recept-info,.youhui{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;   
}
.address-con{
    position: relative;
    width:750rpx;
}
.add-back{
    position: absolute;
    left:0rpx;
    top: 0rpx;
    /* z-index: 200; */
}
.address-detail-con{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap: nowrap;
    align-items: center;
    font-size: 30rpx;
    margin-top: 10rpx;
    height: 180rpx;
    margin-left: 10rpx;
    z-index: 400;
}
.address-detail,.order-con,.goods-style{
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: flex-start;
  font-size: 30rpx;
}
.address-detail{
  width:580rpx;   
}
.recept-item{
    width:500rpx;
}
.recept-info{
    width:600rpx;
    font-size: 30rpx;
    color:#404040;
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: flex-start;
}
.user-phone{
    width: 500rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
}
.addManager{
    padding: 10rpx;
    width: 30rpx;
    height:30rpx;
    align-self: center;
    z-index:400;
    margin-right: 20rpx;
    line-height: 30rpx;
}
.youhui{
    position: relative;
    padding: 25rpx 42rpx;
    height: 30rpx;
    font-size: 30rpx;
    color:#808080;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: center;
    z-index: 400;
}
.order-con{
    background-color: #fff;
    margin-bottom: 10rpx;
    
}
.order-head{
    width: 100%;
    border-bottom: 2rpx solid #f2f2f2;
    padding: 20rpx 22rpx;
    color: #404040;
}
.order-detail{
  width: 100%;
  height: 208rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: nowrap;
  padding: 15rpx 5rpx;
}
.img-con{
    justify-self: flex-start;
}
.goods-style{
    margin-left: 30rpx;
    width: 515rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    flex-wrap: nowrap;
}
.goods-item,.goods-price,.order-right-count{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
    flex-wrap: wrap;
    margin-right: 25rpx;
}
.order-right-count{
    align-items: center;
    color:#808080;
}
.goods-price{
    justify-content: space-between;
    width: 100%;
}
.pay-con{
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    width:100%;
    height:120rpx;
    background-color: #fff;
    z-index: 400;
}
.pay{
    width: 334rpx;
    height: 80rpx;
    line-height: 80rpx;
    position: fixed;
    right: 0rpx;
    bottom: 0rpx;
    margin-top: 30rpx;
    background-color: #b31227;
    color: #fff;
    text-align: center;
    padding: 20rpx 30rpx;
    margin-left: 500rpx;
}
.loadView{
    position: absolute;
    left: 0;
    right: 0;
    top:0;
    bottom: 0;
    background-color: black;
    opacity: 0.5;
}
.count-price{
    height: 30rpx;
    padding-top: 35rpx;
    padding-bottom: 35rpx;
}
.sayToSaller{
    justify-content: flex-start;
}
.order-total{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
    flex-wrap: wrap;
}