    border-radius: 0rpx;
}
.share{
    width: 250rpx;
    height: 64rpx;
    line-height: 64rpx;
    font-size: 35rpx;
    text-align: center;
    border-left: 2rpx solid #c9c9c9;
    /* background: red; */
}
.img-detail{
    position: relative;
    display: flex;
    flex-direction: column;
}
.detailImg{
    /*
        拼接的图片顶部对齐
    */
    vertical-align: top;
}
