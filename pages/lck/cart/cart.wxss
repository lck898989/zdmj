/* pages/lck/cart/cart.wxss */
page{
    background-color: #f2f2f2;
}
.mask{
  width: 750rpx;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #000;
  opacity: 0.7;
  overflow: hidden;
  z-index: 1000;
}
.page-con{
    position: relative;
    overflow: hidden;
}
.page-con-showbuy{
    height: 100vh;
}
.cart-head{
    width: 100%;
    height: 72rpx;
    line-height:72rpx;
    font-size: 30rpx;
    background-color: #fff;
    color: #808080;
    margin-bottom: 20rpx;
}
.store-container{
    width: 720rpx;
    margin-left: 15rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap: nowrap;
    align-items: center;
    background-color: #fff;
    margin-bottom: 20rpx;
}
.storeName-item-p{
    width: 660rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: nowrap;
}
.arrow-right{
    margin-left: 300rpx;
}
.storeName-item{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}
.storename-con{
    width: 640rpx;
    height: 40rpx;
    line-height: 40rpx;
    padding: 20rpx 30rpx;
    border-bottom: 1px solid #eee;
}
.icon_con{
    margin-left: 20rpx;
    margin-right: 20rpx;
}
.checkbox-con{
    width: 640rpx;
    height: 150rpx;
    padding: 20rpx 30rpx;
    border-bottom: 2rpx solid #f2f2f2;
    /* background-color: greenyellow; */
}
.imagecontainer{
    margin-left: 10rpx;
}
.store-detail{
    width: 660rpx;
    margin-right: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap: nowrap;
    align-items: center;
}
.right-text-con{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    flex-wrap: nowrap;
    align-items: center;
    margin-left: 30rpx;
    font-size: 25rpx;
}
.right-line-one{
    width: 400rpx;
    height:55rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap: wrap;
    align-items: center;
}
.right-line-con{
    width: 400rpx;
    /* background: greenyellow; */
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-wrap: nowrap;
    align-items: center;
}
.editor{
    margin-right: 20rpx;
    background-color: #ec0023;
    color : #fff;
    padding: 10rpx 20rpx;
}
.count-control{
    display: flex;
    flex-wrap: nowrap;
    justify-content: center;
    flex-direction: row;
    align-items: center;
    width : 100%;
}
.colorType{
    display: flex;
    flex-wrap: nowrap;
    justify-content: flex-start;
    flex-direction: row;
    align-items: center;
}
.count-item{
    border: 1px solid #eee;
    margin-right: 10rpx;
    padding: 10rpx 20rpx;
}
.real-count{
    margin-right: 10rpx;
}
.delete{
    color : #fff;
    background-color: #ec0023;
    padding: 10rpx 20rpx;
    margin-right: 10rpx;
}
.settle-con{
    width: 100%;
    height: 60rpx;
    justify-self: flex-end;
    padding: 20rpx 0rpx;
    margin-top: 10rpx;
    background-color:#fff;
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
    flex-direction: row;
    align-items: center;
    position: fixed;
    bottom: 0px;
}
.left-con{
    display: flex;
    flex-wrap: nowrap;
    justify-content: flex-start;
    flex-direction: row;
    align-items: center;
}
.settle{
    height: 80rpx;
    line-height: 80rpx;
    width: 210rpx;
    text-align: center;
    background-color: #b31227;
    color : #fff;
    padding: 10rpx 20rpx;
}
.goodList{
    margin-bottom: 100rpx;
}
.selectAll-con{
    margin-left: 20rpx;
}
.imageContainer{
    /* margin-left: 30rpx; */
    border: 10rpx solid #fff;
