    position: fixed;
    top: 310rpx;
    left: 30rpx;
    overflow: hidden;
}
.lineOne-con{
    position: relative;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: flex-start;
}
.img{
   margin-left: 20rpx;
   margin-top: 20rpx;
   border-radius: 20rpx;
}
.price-order-con{
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    flex-wrap: nowrap;
    align-items: flex-start;
    height: 160rpx;
    margin-top: 40rpx;
    margin-left: 20rpx;
}
.cancel-con{
    position: absolute;
    justify-self: flex-end;
    top: 20rpx;
    right: 20rpx;
}
.price-item{
    /* margin-left: 20rpx;
    padding-top: 50rpx; */
    margin-top: 20rpx;
    margin-left: 15rpx;
}
.buy-con{
    position: fixed;
    overflow: hidden;
    background-color: #fff;
    width: 100%;
    height: 800rpx;
    bottom: 0rpx;
    z-index: 2000;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
}
.scc-con{
    width: 100%;
    height: 450rpx;
}
.lineTwo-con{
    padding: 40rpx 0rpx;
    margin-left: 30rpx;
}
.color-con{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    /* //允许换行 */
    flex-wrap: wrap;
    align-items: center;
}
.color-item{
    margin-top: 20rpx;
    margin-right: 20rpx;
    background-color: #eee;
    padding: 10rpx 30rpx;
    border-radius: 10rpx;
    font-size: 25rpx;
}
.choosed{
    background-color: #ec0023;
    color: #fff;
}
.add-sub-con{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap: nowrap;
    align-items: center;
}
.countContainer{
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-wrap: nowrap;
    align-items: center;
    font-size: 30rpx;
}
.as-item{
    margin-right: 5rpx;
    padding: 10rpx 20rpx;
}
