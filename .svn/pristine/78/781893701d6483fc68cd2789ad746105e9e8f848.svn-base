/* pages/Person/Person.wxss */

.background {
    position: absolute;
    left: 0px;
    right: 0px;
    top: 0px;
    bottom: 0px;
    background-color: black;
}

.CodeBox {
    position: absolute;
    height: 92%;
    width: 88%;
    left: 6%;
    top: 4%;
    background: white;
    border-radius: 10px;
}

.image {
    position: absolute;
    top: 7%;
    left: 11%;
    height: 46%;
    width: 77%;
}

.GetMsg {
    position: absolute;
    left: 36%;
    top: 56%;
    text-align: center;
}

.texts {
    position: absolute;
    top: 64%;
    right: 10%;
    width: 80%;
    display: -webkit-box;
    line-height: 24px;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    text-overflow: ellipsis;
}

.anniu {
    position: absolute;
    bottom: 6%;
    background-color: #b883db;
    border-bottom: 2px solid #70319a;
    width: 70%;
    left: 15%;
    line-height: 55px;
    color: white;
    height: 55px;
 
}


