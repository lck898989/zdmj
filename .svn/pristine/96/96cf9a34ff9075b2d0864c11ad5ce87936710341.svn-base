<!--pages/lck/address/address.wxml-->
<view class="page-con">
    <block wx:if='{{isChecked}}'>
        <view class='index-manager' bindtap='addAdd'>
            <image src='../../../resources/add.png' style='width:40rpx;height:40rpx;'></image>
            <view style='margin-left:25rpx;color:#a272c7;font-size:35rpx;'>
                添加新地址
            </view>
        </view>
    </block>
    <block wx:if='{{inputError}}'>
        <view class='error-con'>
            <view>
                <image src='../../../resources/warning.png' style='width:30rpx;height:30rpx;'></image>
            </view>
            <block wx:if='{{nameError}}'>
                <view style='font-size:30rpx;margin-left:15rpx;'>
                    用户名不能为空
                </view>
            </block>
            <block wx:elif='{{numberError}}'>
                <view style='font-size:30rpx;margin-left:15rpx;'>
                    手机号不合法
                </view>
            </block>
        </view>
    </block>
    <block wx:if='{{isChecked}}'>
        <view class="addContainer">
            <!--设置收货人信息(从服务器上拉取收货地址数据)for循环-->
            <block wx:for='{{user}}'>
                <view class='add-manager'>
                    <view class='circle-con'>
                        <view class='before-circle' style='{{item.state === 0 ? "background-color:#863bb7;" : "background-color:#bfbfbf;"}}'>
                            <view>
                                {{item.recipient[0]}}
                            </view>
                        </view>
                        <view wx:if='{{item.state === 0}}' class='defaultAdd'>
                            默认
                        </view>
                    </view>
                    <view class="add-item">
                        <view class="user-con">
                            <view class="n">
                                {{item.recipient}}
                            </view>
                            <view class="p">
                                {{item.phone}}
                            </view>
                        </view>
                        <view class="add-info">
                            {{item.district + item.detaildistrict}}
                        </view>
                    </view>
                    <!--编辑地址-->
                    <view class='editor' bindtap='editorAdd' data-aid='{{item.aid}}'>
                        编辑
                    </view>
                </view>
            </block>
        </view>
    </block>
</view>
