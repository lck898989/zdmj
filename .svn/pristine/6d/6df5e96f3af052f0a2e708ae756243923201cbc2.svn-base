/* components/shopping-common/shoppingCommon-component.wxss */
page{
    background-color: #f2f2f2;
}
.shop-type-con{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-around;
    align-items: center;
    background-color: rgba(176, 10, 241, 0.2);
    width: 100%;
    height: 150rpx;
}
.btn{
    height: 100rpx;
    width: 200rpx;
    background-color: #098a3a;
    color: #fff;
}
.wonderful{
    background-color: grey;
}
.goods-type-con{
    background-color: #fff;
    width: 750rpx;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
}
.type-parent{
    margin-left: 10rpx;
    width: 85%;
    height: 80%;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-around;
    align-items: center;
    /* background-color: red; */
    /* background-color: green; */
    /* border: 1px solid #888; */

}
.type-list{
    padding: 10rpx 20rpx;
    font-size: 30rpx;
    border-top: 1px solid #888;
    border-bottom: 1px solid #888;
    border-left: 1px solid #888;
    border-right: 1px solid #888;
    text-align: center;
}
.extra{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: center;
    background-color: #eee;
    width: 15%;
    height: 60%;
}
.other-con{
    margin-top: 10rpx;
    width: 100%;
    height: 120rpx;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
}
.search-con{
    background-color: rgba(176, 10, 241, 0.2); 
    border: 1px solid rgba(176, 10, 241, 0.2);
    width: 40%;
    height:60rpx;
    border-radius: 80rpx; 
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
    margin-left: 10px;

}
.search-con icon{
    margin-left: 15rpx;
    margin-top: 10rpx;
}
.price-extra-con{
    margin-left: 40rpx;
    border-left: 2px solid #888;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-around;
    align-items: center;
    width: 60%;
}
.price-con{
    font-size: 35rpx;
}
.withIcon{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-around;
    align-items: center;
}
.banshi{
    margin-left: 6rpx;
    margin-top: 10rpx;
}