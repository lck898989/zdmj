<!--pages/lck/order/order.wxml-->
<view class='page-con' hidden='{{sceneView}}'>
    <view class='order-con'>
        <view class='order-head'>
            订单信息
        </view>
        <view class='order-detail'>
            <image src='../../../resources/example.jpg' style='width:190rpx;height:190rpx;margin-left:17rpx;' class='img-con'></image>
            <view class='goods-style'>
                <view class='goods-item' style='font-size:31rpx;color:#404040;margin-bottom:10rpx;'>
                    {{goods.pname}}
                </view>
                <view class='goods-item' style='color:#808080;margin-bottom:20rpx;'>
                    <view style='margin-right:25rpx;font-size:30rpx;'>
                        {{goods.size.color}}
                    </view>
                    <view style='margin-right:25rpx;font-size:30rpx;'>
                        {{goods.size.size}}
                    </view>
                </view>
                <view class='goods-price'>
                    <view style='margin-right:25rpx;font-size:35rpx;color:#b31227;font-weight:800'>
                        ￥ {{goods.price}}
                    </view>
                    <view class='order-right-count'>
                        <view style='margin-right:20rpx;'>
                            数量
                        </view>
                        <view>
                            {{goods.count}}
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <view class='youhui' style='border-bottom:1px solid #fff;background-color:#fff;'>
        <view>
            优惠券
        </view>
        <view>
            暂无可用
        </view>
    </view>
    <view class='address-con'>
        <view style='padding-left:20rpx;padding-right:10rpx;'>
            <image src='../../../resources/location.png' style='width:50rpx;height:50rpx;'></image>
        </view>
        <view class='address-detail'>
            <block wx:if='{{add === null}}'>
                <view>暂时没有收货地址添加一个吧</view>
            </block>
            <block wx:else>
                <view class='recept-info'>
                    <view class='user-phone'>
                        <view class='recept-item'>
                            收货人：{{add.username}}
                        </view>
                        <view>
                            {{add.phoneNumber}}
                        </view>
                    </view>
                    <view class='recept-item'>
                        {{add.addressDetail}}
                    </view>
                </view>
            </block>
        </view>
        <view class='addManager' bindtap='enterAddress' style='margin-left:15rpx;'>
            >
        </view>
    </view>
    <view class='youhui' style='border-bottom:1px solid #fff;background-color:#fff;margin-top:10rpx;margin-bottom:2rpx;'>
        <view>
            配送方式
        </view>
        <view>
            免运费  >
        </view>
    </view>
    <view class='youhui sayToSaller' style='border-bottom:1px solid #fff;background-color:#fff;margin-bottom:10rpx;'>
            <view style='color:#404040'>买家留言：</view>
            <input type='text' placeholder='有什么想提醒卖家的话' style='justify-content:flex-start;'></input>
    </view>
    <view class='youhui count-price' style='border-bottom:1px solid #fff;background-color:#fff;'>
        <view class='order-right-count' style='color:#404040'>
            <view style='margin-right:20rpx;'>
                购买数量
            </view>
            <view>
                {{goods.count}}
            </view>
        </view>
        <view class='order-total'>
            <view style='margin-right:20rpx;'>
                共计：
            </view>
            <view style='font-size:35rpx;color:#b31227;font-weight:800;'>
                ￥ {{goods.price}}
            </view>
        </view>
    </view>
    <view class='pay' bindtap='pay'>
        立即支付
    </view>
</view>
<view class='loadView' hidden='{{loadButton}}'>
</view>
