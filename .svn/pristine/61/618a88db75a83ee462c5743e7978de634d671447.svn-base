/* pages/lck/hotShopping/hotShopping.wxss */
page{
    background-color: white;
}
.page-con{
    position: relative;
}
.shop-type-con{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-around;
    align-items: center;
    background-color: rgba(176, 10, 241, 0.2);
    width: 100%;
    height: 150rpx;
}
.btn{
    height: 100rpx;
    width: 200rpx;
    color: #fff;
    background-color: #aaa;
}
.choosed{
    background-color: #098a3a;
}
.wonderful{
    background-color: grey;
}
.goods-type-con{
    background-color: #fff;
    width: 750rpx;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
}
.type-parent{
    margin-left: 10rpx;
    width: 85%;
    height: 80%;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-around;
    align-items: center;
    /* background-color: red; */
    /* background-color: green; */
    /* border: 1px solid #888; */

}
.type-list{
    padding: 10rpx 20rpx;
    font-size: 30rpx;
    border-top: 1px solid #888;
    border-bottom: 1px solid #888;
    border-left: 1px solid #888;
    border-right: 1px solid #888;
    text-align: center;
}
.extra{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: center;
    background-color: #ec0023;
    width: 15%;
    height: 60%;
    color: white;
}
.other-con{
    margin-top: 10rpx;
    width: 100%;
    height: 120rpx;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
}
.search-con{
    background-color: rgba(176, 10, 241, 0.2);
    border: 1px solid rgba(176, 10, 241, 0.2);
    width: 40%;
    height:60rpx;
    border-radius: 80rpx; 
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
    margin-left: 10px;

}
.search-con icon{
    margin-left: 15rpx;
    margin-top: 10rpx;
}
.price-extra-con{
    margin-left: 40rpx;
    border-left: 2px solid #888;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-around;
    align-items: center;
    width: 60%;
}
.price-con{
    font-size: 35rpx;
}
.withIcon{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-around;
    align-items: center;
}
.banshi{
    margin-left: 6rpx;
    margin-top: 10rpx;
}
.row-style{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
}
.list-style{
    width: 100%;
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    justify-content: flex-start;
    /* align-items: center; */
}
/* 更多分类样式 */
.typelist-con{
    width: 300rpx;
    height:500rpx;
    position: absolute;
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
    background-color: #ec0023;
    top : 235rpx;
    right: 5rpx;
}
.type-item{
    width: 80%;
    font-size: 30rpx;
    color: #fff;
    margin:20rpx 0rpx;
    border-bottom: 1px solid #fff;
}
.textCommView{
    background-color: white;
    height: 100px;
    width: 750rpx;
}