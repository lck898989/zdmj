/* pages/lck/cartGoodsDetail/cartGoodsDetail.wxss */
page{
    background-color: #efefef;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    flex-wrap: nowwrap;
    position: relative;
}
.swiper-con{
    margin: auto;
    height: 550rpx;
    width: 750rpx;
    background-color: #fff;
}
.price-con{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    flex-wrap: nowrap;
    align-items: flex-start;
    border-bottom: 1px solid #fff;
    padding:30rpx 0rpx;
}
.goodsSales{
    align-self: flex-end;
}
.notice-con{
    padding: 20rpx 0rpx;
    border-bottom: 1px solid #fff;
}
.goods_introduce{
    background-color: #fff;
    width: 100%;
    height: 600rpx;
}
.options-con{
    align-self: flex-end;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    flex-wrap: nowrap;
    align-items: center;
    position: fixed;
    bottom: 0px;
    right: 20rpx;
}
.cart-con{
    margin-left: 20rpx;
    background-color: #ec0023;
    color : #fff;
    padding: 20rpx 10rpx;
    margin-right: 20rpx;
}
.buy-now{
    /* margin-right: 20rpx; */
    background-color: #ec0023;
    color : #fff;
    padding: 20rpx 10rpx;
}
/*加入购物车或者是立即购买弹出的选择框 */
.buy-con{
    position: fixed;
    background-color: rgb(233, 227, 227);
    width: 100%;
    height: 800rpx;
    bottom: -800rpx;
    border-top-left-radius: 15rpx;
    border-top-right-radius: 15rpx;
    /* display: flex;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: flex-start;
    flex-direction: column; */
}
.lineOne-con{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap: nowrap;
    align-items: center;
}
.price-order-con{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    flex-wrap: nowrap;
    align-items: center;
}
.cancel-con{
    justify-self: flex-end;
    margin-right: 20rpx;
    margin-top: -10rpx;
}
.lineTwo-con{
    padding: 40rpx 0rpx;
    margin-left: 30rpx;
}
.color-con{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap: nowrap;
    align-items: center;
}
.color-item{
    margin-top: 20rpx;
    margin-right: 20rpx;
    background-color: #eee;
    padding: 10rpx 30rpx;
    border-radius: 10rpx;
}
.choosed{
    background-color: #ec0023;
    color: #fff;
}
.add-sub-con{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap: nowrap;
    align-items: center;
}
.countContainer{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-wrap: nowrap;
    align-items: center;
}
.as-item{
    background-color: #eee;
    margin-right: 5rpx;
    padding: 10rpx 20rpx;
}
.confirm{
    width: 750rpx;
    margin-top: 300rpx;
    background-color: #ec0023;
    font-size: 40rpx;
    height: 100rpx;
    line-height: 100rpx;
    color : #fff;
    position: fixed;
    bottom: 0rpx;
    text-align: center;

}