<view class='list-item' bindtap='onTap' bindcustomevent='eventListener' data-hi="weget" data-me="lck">
    <view class='img-con'>
        <image src="{{host}}{{goods.head}}" style="width:350rpx;height:150px;"></image>
        <view class='bottom-shadow'>
            <view class='text-pos-con'>
                <image src='../../icons/self.png' style='width:50rpx;height:50rpx;border-radius:50rpx;background-color:#fff;'></image>
                <text style='font-size:20rpx;color:red;width:50rpx'>小湘</text>
            </view>
            <view class='text-pos-con'>
                <text style='font-size:20rpx;color:red;width:50rpx'>50</text>
                <image src='../../icons/love.png' style='width:50rpx;height:50rpx;border-radius:50rpx;'></image>
            </view>
        </view>
    </view>
    <view class='text-con'>
        <view class='top-text'>
            <text>{{goods.description}}</text>
        </view>
        <view class='bottom-text'>
            <view class='bottome-item'>
                {{goods.price}}
            </view>
            <view class='bottome-item'>
                {{goods.price}}
            </view>
        </view>
        <!--需要动态添加的元素在这里添加-->
        <slot name='text-extra'></slot>
    </view>
    <!-- <slot name='flex-row-last' class='other'></slot> -->
</view>