<!--pages/userInfo/userInfo.wxml-->
<view class="scene">
    <view class="userInfo">
        <image mode='widthFix' class="userImage" src="{{userInfo.avatarUrl}}"></image>
        <text class="userName">{{userInfo.nickName}}</text>
    </view>
    <button class="massage" bindtap='PressMessageMess'>
        消息通知
        <image class="msgImage" mode='widthFix' src="../../resources/message_bar.png">
            <text class="number" style='font-size:14px;'>{{messageAllNumber}}</text>
        </image>
    </button>
    <button bindtap='MtCode' class="mycode">
        我的二维码
        <image class="icon_code" mode='widthFix' src="../../resources/icon_code.png">
        </image>
    </button>
    <button class='orderButton' bindtap='orderButton'>
        订单管理
    </button>
    <button class='myShopping' bindtap='PressMyShop'>
        我的购物车
    </button>
    <button bindtap='MtMoney' class="MyMoney">
        我的钱包
    </button>
    <button class="myJuan" bindtap='PressMy'>
        我的优惠券
        <image class="dayu" mode='widthFix' src="../../resources/icon_arrow.png"></image>
    </button>
    <button class="position" bindtap='PressPosition'> 收货地址
        <image src="../../resources/icon_arrow.png" mode='widthFix' class="dayu"></image>
    </button>
    <view class="PersonMsg" bindtap='PersonTalk'>
        联系客服
    </view>

    <button></button>
</view>